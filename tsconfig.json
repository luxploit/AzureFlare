{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 10",

	"compilerOptions": {
		"lib": ["es2018", "dom"],
		"module": "commonjs",
		"target": "es2018",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"outDir": "lib",

		"stripInternal": true
	},

	"include": ["src/**/*"]
}
